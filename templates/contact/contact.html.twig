{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        padding-top: 2rem;
    }

    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .arrondie {
        border-radius: 10px;
    }
</style>

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-10">
        <div class="col-md-4">
            <div class="card arrondie">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Envoyer un message.</h1>


                    {{ form_errors(form) }}

                    {{ form_start(form) }}

                    {{ form_row(form.nom, {'label_attr': {'class': 'col-form-label, d-flex'}}) }}
                    {{ form_row(form.sujet, {'label_attr': {'class': 'col-form-label, d-flex, mt-3'}}) }}
                    {{ form_row(form.email, {'label_attr': {'class': 'col-form-label, d-flex, mt-3'}}) }}
                    {{ form_row(form.message, {'label_attr': {'class': 'col-form-label, d-flex, mt-3'}}) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
